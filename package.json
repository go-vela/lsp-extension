{
  "name": "vela",
  "displayName": "vela",
  "description": "Providing IDE integration for Vela",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vela.getCurrentStatus",
        "title": "Get Current Status"
      }
    ],
    "configuration": {
      "title": "Token",
      "properties": {
        "vela.token_pat": {
          "type": [
            "string",
            "null"
          ],
          "default": "",
          "description": "Your PAT."
        },
        "vela.server": {
          "type": [
            "string",
            "null"
          ],
          "default": "https://vela.example.com",
          "description": "Your Vela server host."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/node-fetch": "^2.6.11",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "extensionDependencies": [
    "vscode.git"
  ]
}